<%# show pages are more information pages %>

<h1> <%= @dream.title %> </h1>
<p><%= @dream.date %></p>
<p>Genre: <%= @dream.genre %></p>

<h3>Dream Entry:</h3>
<p><%= @dream.dream %></p>


<%# delete 
 value="delete" #overrides POST method to delete%> 

<form method="post" action="/dreams/<%= @dream.id %>">
    <input type="hidden" name="_method" value="delete">
    
    <input type="submit" value="Delete">
</form>

<br>
<%# edit button /dreams/:id/edit %>

<form action="/dreams/<%= @dream.id %>/edit">
    <input type="submit" value="Edit" />
</form>
